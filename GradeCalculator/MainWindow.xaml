<Window x:Class="GradeCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300" Background="HotPink">
    <StackPanel Margin="10">
        <Label Foreground="Green" FontWeight="Bold">Username:</Label>
        <TextBox Name="jgober1" Foreground="Red" />
        <Label Foreground="Green" FontWeight="Bold">Password:</Label>
        <PasswordBox x:Name="Jess2" MaxLength="8" Foreground="Red" />
        <Button Margin="5" Content="Login" Click="Button_Click"/>
    </StackPanel>
</Window>
